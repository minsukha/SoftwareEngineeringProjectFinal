<% var title = 'GCSU Hockey' %>
<% var name = "" %>
<% if(!user) { %>
<% include header %>
<% } else { %>
<% var privilege = user.userInfo.privilege %>
<% name = user.userInfo.firstName + " " + user.userInfo.lastName %>
<% include header %>
<% } %>
<% if(privilege == "Admin" || privilege == "Officer") { %>

<center><div class="ui threaded comments">
<h1 class="ui dividing header">Game Stats</h1>
<table class="table-hover">
<th>Game #</th>
<th>Date</th>
<th>Opponent</th>
<th>Result</th>
<th>Full Game Stats</th>
<th>Delete Game </th>
<% for(var i=0; i < gameDateArray.length; i++) { %>
   <tr>
     <td><%= i+1 %></td>
     <td><%= gameDateArray[i] %></td>
     <td><%= gameOpponentArray[i] %></td>
     <td><%= gameResultArray[i] %></td>
     <td><a href="<%= gameFullStatsArray[i] %>" target="_blank">Full Stats</a></td>
     <td><form action="/deleteGameStat" method="post"><input type="text" id="gameStatsId" name="gameStatsId" value="<%= gameStatsIdArray[i] %>" hidden><a id="<%= i %>" href="#" onclick="document.forms[this.id].submit();return false;">Delete</a></form></td>
   </tr>
<% } %>
</table>
<br></br>
	<center><button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Update Game Stats</button></center>

                        <!-- Modal -->
                        <div class="modal fade" id="myModal" role="dialog">
                        <div class="modal-dialog modal-sm">
    
                        <!-- Modal content-->
                        <div class="modal-content">
                        <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Update Game Stats</h4>
                        </div>
                        <form action="/updateGameStats" method="post">
                        <div class="form-group">
            				<label for="gameDate">Date of Game</label>
            				<input type="date" class="form-control" id="gameDate" name="gameDate">
       					</div>
    	  				<div class="form-group">
            				<label for="gameOpponent">Opponent</label>
            				<input type="text" class="form-control" id="gameOpponent" name="gameOpponent" placeholder="Opposing Team">
        				</div>
        				<div class="form-group">
            				<label for="gameResult">Result</label>
            				<input type="text" class="form-control" id="gameResult" name="gameResult" placeholder="Win/Loss 5-3">
        				</div>
        				<div class="form-group">
            				<label for="gameFullStats">Link to Full Stats</label>
            				<input type="text" class="form-control" id="gameFullStats" name="gameFullStats" placeholder="URL address of game stats from secrhl">
        				</div>
                        <div class="modal-footer">
                        <button type="submit" class="btn btn-default">Submit</button>
                        </form>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
</div>
      </div>
      
    </div>
  </div>
</div>
</div>
</div>
<% } else { %>
<center><div class="ui threaded comments">
<h1 class="ui dividing header">Game Stats</h1>
<table class="table-hover">
<th>Game #</th>
<th>Date</th>
<th>Opponent</th>
<th>Result</th>
<th>Full Game Stats</th>
<% for(var i=0; i < gameDateArray.length; i++) { %>
   <tr>
     <td><%= i+1 %></td>
     <td><%= gameDateArray[i] %></td>
     <td><%= gameOpponentArray[i] %></td>
     <td><%= gameResultArray[i] %></td>
     <td><a href="<%= gameFullStatsArray[i] %>" target="_blank">Full Stats</a></td>
   </tr>
<% } %>
</table>
<% } %>
</div>
</body>
</html>